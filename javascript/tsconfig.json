{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": false,
    "declaration": true,
    "resolveJsonModule": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "lib": ["es2022", "DOM"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["./dist/**/*", "./node_modules", "./src/**/*.deno.ts"],
  "ts-node": { "esm": true }
}
